# Franky Configuration File
#
# Copy this file to .env and configure according to your setup

# ============================================================
# REQUIRED: OpenAI API Key
# ============================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================
# OUTPUT MODE
# ============================================================
# speakers: Use laptop/PC speakers and microphone (no ESP32 needed)
# esp32_udp: Use ESP32 with ReSpeaker for audio (default)
OUTPUT_MODE=esp32_udp

# ============================================================
# FEATURES
# ============================================================
# Enable/disable hardware features (true/false)
ENABLE_CAMERA=true
ENABLE_MQTT=true
ENABLE_JAW=true
ENABLE_EYES=true

# ============================================================
# HARDWARE CONFIGURATION
# ============================================================

# ESP32 IP address (auto-detected if not specified)
# Only needed if OUTPUT_MODE=esp32_udp
ESP32_IP=192.168.1.101

# MQTT broker for jaw/eyes control
# Only needed if ENABLE_MQTT=true
MQTT_SERVER=192.168.1.100
MQTT_PORT=1883

# Camera for vision (optional)
# Use webcam: set USE_WEBCAM=true
# WEBCAM_INDEX: Camera device number (0=default, 1=second camera, etc.)
#   - On macOS: 0 might be iPhone (Continuity Camera), try 1 for built-in camera
USE_WEBCAM=false
WEBCAM_INDEX=0
# Use RTSP: set USE_WEBCAM=false and provide CAMERA_RTSP_STREAM
CAMERA_RTSP_STREAM=rtsp://admin:password@192.168.1.102/Preview_01_main

# Save camera screenshots to logs/ folder (default: false)
SAVE_CAMERA_SCREENSHOTS=false

# ============================================================
# OPTIONAL: Meross Smart Devices
# ============================================================
# For controlling Meross smart plugs/lights/switches (UV light blinking, etc.)
# Test with: python3 test_meross.py
# Set ENABLE_MEROSS_CONTROL=true to enable (default: false)
ENABLE_MEROSS_CONTROL=false
# API servers by region (change if needed):
#   - https://iotx-us.meross.com (USA - default)
#   - https://iotx-eu.meross.com (Europe)
#   - https://iotx-ap.meross.com (Asia Pacific)
MEROSS_EMAIL=your@email.com
MEROSS_PASSWORD=your_meross_password

# ============================================================
# OPTIONAL: Evolux/Tuya Smart Bulbs
# ============================================================
# For controlling Evolux WiFi bulbs and other Tuya devices
# Test with: python3 test_evolux.py
# Get credentials by running: python3 -m tinytuya wizard
EVOLUX_DEVICE_ID=your_device_id_here
EVOLUX_LOCAL_KEY=your_local_key_here
EVOLUX_IP=192.168.1.103
# ============================================================
# OPTIONAL: Smart Flood Light (Tuya)
# ============================================================
# RGB flood light with color sequences and effects
# Test with: python3 test_flood_light.py
# Set ENABLE_FLOOD_LIGHT_CONTROL=true to enable (default: false)
ENABLE_FLOOD_LIGHT_CONTROL=false
FLOOD_LIGHT_DEVICE_ID=your_device_id_here
FLOOD_LIGHT_LOCAL_KEY=your_local_key_here
FLOOD_LIGHT_IP=192.168.1.104
